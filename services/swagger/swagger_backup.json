{
  "info": {
    "version": "0.0.1", 
    "description": "Swagger spec for documenting the serpent api service", 
    "title": "Serpent Tracker"
  }, 
  "paths": {
    "/auth/register": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/user-full"
              }
            }
          }, 
          "required": true, 
          "description": "User to add"
        }, 
        "responses": {
          "200": {
            "description": "user object"
          }
        }, 
        "summary": "Creates a new user"
      }
    }, 
    "/auth/login": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/user"
              }
            }
          }, 
          "required": true, 
          "description": "User to log in"
        }, 
        "responses": {
          "200": {
            "description": "Successfully logged in"
          }
        }, 
        "summary": "Logs a user in"
      }
    }, 
    "/api/users/{id}": {
      "get": {
        "responses": {
          "200": {
            "description": "user object"
          }
        }, 
        "parameters": [
          {
            "required": true, 
            "in": "path", 
            "description": "ID of user to fetch", 
            "name": "id", 
            "schema": {
              "type": "integer", "format": "int64"
            }
          }
        ], 
        "summary": "Returns a user based on a single user ID"
      }
    }, 
    "/api/ping": {
      "get": {
        "responses": {
          "200": {
            "description": "Will return 'pong!'"
          }
        }, 
        "summary": "Just a sanity check"
      }
    }, 
    "/auth/status": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }], 
          "responses": {
            "200": {
              "description": "user object"
            }
          }, 
          "summary": "Returns the logged in user's status"
        }
    }, 
    "/api/users": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/user-full"
              }
            }
          }, 
          "required": true, 
          "description": "User to add"
        }, 
        "security": [
          {
            "bearerAuth": []
            }
          ], 
        "responses": {
          "200": {
            "description": "User added"
          }
        }, 
        "summary": "Adds a new user"
      }, 
      "get": {
        "responses": {
          "200": {
            "description": "user object"
          }
        }, 
        "summary": "Returns all users"
      }
    },
    "/api/snake": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/snake"
              }
            }
          }, 
          "required": true, 
          "description": "Snake to add"
        },
        "security": [{"bearerAuth": []}], 
        "responses": {
          "200": {
            "description": "Snake added"
          }
        }, 
        "summary": "Creates a new snake"
      },
      "get": {
        "security": [
          {
            "bearerAuth": []
            }
          ], 
        "responses": {
          "200": {
            "description": "snake object"
          }
        },
         
        "summary": "Returns all snakes owned by you"
      }
    } 
  }, 
  "openapi": "3.0.0", 
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "scheme": "bearer", 
        "type": "http"
      }
    }, 
    "schemas": {
      "user-full": {
        "properties": {
          "username": {
            "type": "string"
          }, 
          "email": {
            "type": "string"
          }, 
          "password": {
            "type": "string"
          }
        }
      }, 
      "user": {
        "properties": {
          "email": {
            "type": "string"
          }, 
          "password": {
            "type": "string"
          }
        }
      },
      "snake": {
        "properties": {
          "name": {
            "type": "string"
          }, 
          "snake_genus": {
            "type": "string"
          },
          "alive": {
            "type": "boolean"
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  }, 
  "servers": [{"url": "http://localhost"}]}
